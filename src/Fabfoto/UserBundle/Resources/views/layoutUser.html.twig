{%block header %}
<!DOCTYPE html>
<html>
    <head>
        <title>{% block titlepage %}Fabbook User Admin {% endblock titlepage %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ asset('bundles/fabfotogallery/bootstrap/css/bootstrap.css')}}" rel="stylesheet">
        {% block importcss %}
        {% endblock importcss %}
        <link rel="stylesheet" href="{{asset('bundles/fabfotogallery/css/smoothness/jquery-ui-1.8.16.custom.css')}}" />
        {% stylesheets 
            '@AdmingeneratorActiveAdminThemeBundle/Resources/public/css/all.css'
            '@FabfotoGalleryBundle/Resources/public/chosen/chosen.css'
            '@AdmingeneratorActiveAdminThemeBundle/Resources/public/css/all.css'
        %}
               <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}

        {% javascripts
        '@FBKJsLibBundle/Resources/public/jquery/jquery-1.8.2.min.js'
        '@FabfotoGalleryBundle/Resources/public/chosen/chosen.jquery.js'
        '@FabfotoGalleryBundle/Resources/public/js/jquery-ui-1.8.16.custom.min.js'
        '@FBKJsLibBundle/Resources/public/tinyMce/jquery.tinymce.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
	<script src="{{ asset('bundles/genemuform/js/genemuFormBundle.js') }}"></script>
        <script src="{{ asset('bundles/fabfotogallery/bootstrap/js/bootstrap.min.js')}}"></script>
        <script>
            $(".alert").alert();
        </script>

        {% if form is defined %}
        {{ form_javascript(form) }}
        {% endif %}
        {%block importjs%}
        {%endblock importjs%}

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

    </head>

    {% endblock header %}
    <body>
        <div data-role="page" {% block optionpage %}{% endblock optionpage %} data-theme="c" >
             <div id="header" >
                 <a href="{{path('show_articles')}}"><h1>{% block title %}Fabbook{%endblock title%}</h1></a>
                {{ knp_menu_render('FabfotoUserBundle:Builder:userMenu') }}
            </div>
            <div class="main_content" >
                {% if app.session.flashes %}
                 <div id="alert">
                                   {% for type, message in app.session.flashes%}
                                   <a class="close" data-dismiss="alert">Ã—</a>
                                   <div class="alert alert-{{type}}">
                                   <div class="wrap">
                                       {{message}}
                                   </div>
                               </div>
                               {% endfor%}
                           </div>
                {% endif%}
                <div id="body_content">
                    {% block content %}
                    Welcome on Fabbook
                    {% endblock %}
                </div>
            </div>
            <div data-role="footer" >
                <div data-role="navbar" data-position="fixed" data-fullscreen="true">

                </div><!-- /navbar -->
            </div>
        </div>
    </body>
</html>
