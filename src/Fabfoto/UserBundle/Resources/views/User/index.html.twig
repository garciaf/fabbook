{% extends 'FabfotoUserBundle::layoutUser.html.twig'%}
{% block content %}
<h1>Your Profile</h1>
<div class="main_content">
<table class="records_list">
    <thead>
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Firstname</th>
            <th>Slug</th>
            <th>Title</th>
            <th>Description</th>
            <th>Googlelink</th>
            <th>Facebooklink</th>
            <th>Githublink</th>
            <th>Linkedlink</th>
            <th>Twitterlink</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description | raw }}</td>
            <td>{{ entity.googleLink }}</td>
            <td>{{ entity.facebookLink }}</td>
            <td>{{ entity.gitHubLink }}</td>
            <td>{{ entity.linkedLink }}</td>
            <td>{{ entity.twitterLink }}</td>
            <td>{{ entity.phone }}</td>
            <td>
                <ul class="actions">
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock content %}