{% extends 'FabfotoUserBundle::layoutUser.html.twig'%}
{% block content %}
<h1>User</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>

        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Googlelink</th>
            <td>{{ entity.googleLink }}</td>
        </tr>
        <tr>
            <th>Facebooklink</th>
            <td>{{ entity.facebookLink }}</td>
        </tr>
        <tr>
            <th>Githublink</th>
            <td>{{ entity.gitHubLink }}</td>
        </tr>
        <tr>
            <th>Linkedlink</th>
            <td>{{ entity.linkedLink }}</td>
        </tr>
        <tr>
            <th>Twitterlink</th>
            <td>{{ entity.twitterLink }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ entity.phone }}</td>
        </tr>
        
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('user_edit') }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{path('user_portrait')}}">
           Manage my Picture
        </a>
    </li>
</ul>
{% endblock content %}