    </head>
    <body>

        <div class="container">
             {% if app.session.flashes %}
             <div id="alert">
                               {% for type, message in app.session.flashes%}
                               <a class="close" data-dismiss="alert">Ã—</a>
                               <div class="alert alert-{{type}}">
                               <div class="wrap">
                                   {{message}}
                               </div>
                           </div>
                           {% endfor%}
                       </div>
                       {% endif%}

            {% block body %}lipso lium{%endblock%}


        </div>

