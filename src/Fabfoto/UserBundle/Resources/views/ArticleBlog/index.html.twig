{% extends 'FabfotoUserBundle::layoutUser.html.twig'%}
{% block content %}
<h1>ArticleBlog list</h1>
<div class="main_content">
<table class="records_list">

    <thead>

        <tr>
            <th>Id</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Content</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('writter_blog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.subtitle }}</td>
            <td>{{ entity.content | raw }}</td>
            <td>{{ entity.author }}</td>
            <td class="actions">
                <a class="show" href="{{ path('writter_blog_show', { 'id': entity.id }) }}"></a>
                <a class="edit" href="{{ path('writter_blog_edit', { 'id': entity.id }) }}"></a>
                <a class="delete" href="{{ path('writter_blog_delete', { 'id': entity.id }) }}" ></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a class="new" href="{{ path('writter_blog_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
</div>
{% endblock content %}
