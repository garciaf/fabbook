{% extends 'FabfotoGalleryBundle::layoutAdmin.html.twig'%}
{% block content %}
<h1>Author list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Firstname</th>
            <th>Description</th>
            <th>Googlelink</th>
            <th>Facebooklink</th>
            <th>Githublink</th>
            <th>Linkedlink</th>
            <th>Twitterlink</th>
            <th>Mail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_author_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.googleLink }}</td>
            <td>{{ entity.facebookLink }}</td>
            <td>{{ entity.gitHubLink }}</td>
            <td>{{ entity.linkedLink }}</td>
            <td>{{ entity.twitterLink }}</td>
            <td>{{ entity.mail }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_author_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_author_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_author_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock content %}