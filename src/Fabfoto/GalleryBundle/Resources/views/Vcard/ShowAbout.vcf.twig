BEGIN:VCARD
VERSION:3.0
N:{{user.name}};{{user.firstName}}
FN:{{user}}
ROLE:{{user.title}}
TITLE:{{user.title}}
{% if user.portrait.count >0 %}
{% set photo = user.portrait.0 %}
PHOTO;VALUE=URL;TYPE={{photo.fileExtension|upper}}:{{photo.webPath | apply_filter("background", true)}}
{% endif %}
URL:{{url('show_vcard_from' , { 'slug': user.slug }) }}
TEL;TYPE=CELL,VOICE: {{user.mobile}}
TEL;TYPE=HOME,VOICE:{{user.phone}}
EMAIL;TYPE=PREF,INTERNET:{{user.email}}
REV:{{user.updatedAt |date('Y-m-d')}}
END:VCARD
