{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block content %}
<div class="list_album">
    {% for album in albums%}
    <div class="album_sum_up">

        <a href="{{path('show_album', {'id':album.id})}}" >
            <h1 class="album_tile">{{album.name}}</h1>
        </a>
        <a href="{{path('show_album', {'id':album.id})}}" >
            <image class ="album_cover" src="/{{album.picturecover.thumbpath}}"/>
        </a>
        <p class="album_comment">{{album.comment}}</p>
    </div>
    {% endfor %}
</div>
{% endblock content %}
