{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block importjs %}

<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" />
<script type="text/javascript">
    $(document).ready(function() {
        $("a.fancypicture").fancybox({
            'padding'			: 0,
            'autoScale'			: true,
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'overlayOpacity'	: 0.9
        });
    });
</script>
{% endblock importjs %}
{% block title %}{{album}}{%endblock title%} 
{% block content %}
<h1 id="title_album">{{album}}</h1>
<h2 id="subtitle_album">{{album.comment}}</h2>
<div id="gallery">
    {% for picture in pictures%}
    <a rel = "{{album.id}}" href="/{{picture.webpath}}" title="{{picture}}" class="fancypicture">
        <img src="/{{picture.thumbpath}}" width="128" height="128" alt="{{picture}}" />
    </a>
    {% endfor %}
</div>
{% endblock content %}


{% block carroussel %}
{% include 'FabfotoGalleryBundle:Default:BackgroundVegas.html.twig' %}
{% endblock carroussel %}
