{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block importjs %}

<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" />
<script type="text/javascript">
    $(document).ready(function() {
        $("a.fancypicture").fancybox({
            'padding'			: 0,
            'autoScale'			: true,
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'overlayOpacity'            : 0.9
        });
    });
</script>
{% endblock importjs %}
{% block title %}{{album}}{%endblock title%}
{% block content %}
<div class="page-header">
    <h1>{{album}} <small>{{album.comment}}</small></h1>
</div>
{% include 'FabfotoGalleryBundle:Default:ListPicture.html.twig' with pictures %}
{% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': album.slug} %}
{% endblock content %}

{%block qrLink %}
<a id="qrlink" rel="popover" href="{{path('albums_mobile') }}" data-content='<img alt="[QR Code]" src="/{{ mopa_barcode_url("qr", url("albums_mobile") ) }}"/>' data-original-title="{% trans %}mobile{% endtrans %}">
    <div class="visible-desktop"><i class="icon-qrcode icon-black"></i></div>
    <div class="hidden-desktop"><i class="icon-qrcode icon-black"></i> {% trans %}mobile{% endtrans %}</div>
</a>
{%endblock qrLink %}

{% block carroussel %}
{% include 'FabfotoGalleryBundle:Default:BackgroundVegas.html.twig' %}
{% endblock carroussel %}
{% block rss %}
<a  href="{{path('rss_album')}}"><img alt="rss_image" id="rss" src="{{ asset('bundles/fabfotogallery/image/icon/rss-icon.png')}}" /></a>
{%endblock rss%}
