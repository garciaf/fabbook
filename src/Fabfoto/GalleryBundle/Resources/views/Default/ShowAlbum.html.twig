{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block importjs %}

<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" />
<script type="text/javascript">
    $(document).ready(function() {
        $("a.fancypicture").fancybox({
            'padding'			: 0,
            'autoScale'			: true,
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'overlayOpacity'            : 0.9
        });
    });
</script>
{% endblock importjs %}
{% block title %}{{album}}{%endblock title%} 
{% block content %}
<h1 id="title_album">{{album}}</h1>
<h2 id="subtitle_album">{{album.comment}}</h2>
<div id="gallery">
    <ul class="thumbnails">
    {% for picture in pictures%}
    <li>
    <a rel = "{{album.id}}" href="/{{picture.webpath}}" title="{{picture}}" class="fancypicture thumbnail">
        <img src="{{picture.webpath| apply_filter('thumb_square') }}" width="128" height="128" alt="{{picture}}" />
    </a>
    </li>
    {% endfor %}
    </ul>
</div>
{% endblock content %}

{%block qrLink %}
<a id="qrlink" rel="popover" href="{{path('albums_mobile') }}" data-content='<img alt="[QR Code]" src="/{{ mopa_barcode_url("qr", url("albums_mobile") ) }}"/>' data-original-title="Mobile version">
    <i class="icon-qrcode icon-white"></i>
</a>
{%endblock qrLink %}

{% block carroussel %}
{% include 'FabfotoGalleryBundle:Default:BackgroundVegas.html.twig' %}
{% endblock carroussel %}
