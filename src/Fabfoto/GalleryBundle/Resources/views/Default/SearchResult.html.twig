{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block importjs %}

<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" />
<script type="text/javascript">
    $(document).ready(function() {
        $("a.fancypicture").fancybox({
            'padding'			: 0,
            'autoScale'			: true,
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'overlayOpacity'	: 0.9
        });
    });
</script>
{% endblock importjs %}
{% block content %}
<h1 id="picture_search"> Result in Pictures :</h1>
<div id="gallery">
    {% for picture in pictures%}
    <a rel = "search_result" href="/{{picture.webpath}}" title="{{picture}}" class="fancypicture">
        <img src="/{{picture.thumbpath}}" width="128" height="128" alt="{{picture}}" />
    </a>
    {% endfor %}
</div>
<h1 id="album_search"> Result in Album :</h1>
<div class="list_album">
    {% for album in albums%}
    <a href="{{path('show_album', {'id':album.id})}}" >
        <div class="album_sum_up" style="background: url(/{{album.picturecover.webpath}})" >
            <h1 class="album_title">{{album.name}}</h1>

            <p class="album_comment">{{album.comment}}</p>
        </div>
    </a>

    {% endfor %}
</div>
{% endblock content %}
{% block search_query %}
{{keywords}}
{%endblock search_query%}

