{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block importjs %}

<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fabfotogallery/fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" />
<script type="text/javascript">
    $(document).ready(function() {
        $("a.fancypicture").fancybox({
            'padding'			: 0,
            'autoScale'			: true,
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'overlayOpacity'	: 0.9
        });
    });
</script>
{% endblock importjs %}
{% block content %}
{% if ArticlesBlogs is not empty %}
<div class="page-header">
    <h1>Result <small>for blog </small></h1>
</div>
{% include 'FabfotoGalleryBundle:Default:ListArticleBlog.html.twig' with ArticlesBlogs %}
{% endif %}
{% if albums is not empty %}
<div class="page-header">
    <h1>Result <small>in albums </small></h1>
</div>
<div class="list_album">
{% include "FabfotoGalleryBundle:Default:ListAlbum.html.twig" with albums %}
</div>
{% endif %}
{% if pictures is not empty %}
<div class="page-header">
    <h1>Result <small>for pictures </small></h1>
</div>
{% include 'FabfotoGalleryBundle:Default:ListPicture.html.twig' with pictures %}
{% endif %}


{% endblock content %}
{% block search_query %}
{{keywords}}
{%endblock search_query%}

