<div id="NewsCarousel" class="carousel slide">

    <div class="carousel-inner">
        {% for blog in lastBlogs %}
        <div class="{% if loop.first %}active {% endif %}item center">
                {% if blog.cover is not null %}
                    <img src="{{blog.cover.webpath| apply_filter('cover') }}" width="100%" alt="{{blog.cover}}" />
                {% endif %}
                {% if blog.cover is null %}
                    <img src="{{asset('bundles/fabfotogallery/image/defaultCover.png') | apply_filter('cover')}}" />
                {% endif %}
            <div class="carousel-caption">
                <a href="{{path('show_article_blog', {'slugblog': blog.slugblog})}}">
                <h4>{{blog.title}}</h4>
                <p>{{blog.subtitle}}</p>
                </a>
            </div>
        </div>
        {% endfor %}
        {% for album in lastAlbums %}
        <div class="item center">
            <img src="{{album.picturecover.webpath | apply_filter('cover') }}" width="100%" alt="{{album.name}}" />
        <div class="carousel-caption">
                <a href="{{path('show_album', {'slug':album.slug})}}">
                <h4>{{album.name}}</h4>
                <p>{{album.comment}}</p>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
    <a class="left carousel-control" href="#NewsCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#NewsCarousel" data-slide="next">›</a>
</div>
