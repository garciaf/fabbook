{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block titlepage %}Fabfoto-Blog{% endblock titlepage %}
{% block content %}

<div class="page-header">
    <h1>Blog <small>{% trans %}about.it{% endtrans %}</small></h1>
</div>

{% include "FabfotoGalleryBundle:Default:ListArticleBlog.html.twig" %}
<div class="center">
    {{ pagerfanta(ArticlesBlogs, 'twitter_bootstrap_translated') }}
</div>
{% endblock content %}
{%block qrLink %}
<a id="qrlink" rel="popover" href="{{path('index_blog_mobile') }}" data-content='<img alt="[QR Code]" src="/{{ mopa_barcode_url("qr", url("index_blog_mobile") ) }}"/>' data-original-title="{% trans %}mobile{% endtrans %}">
    <div class="visible-desktop"><i class="icon-qrcode icon-white"></i></div>
    <div class="hidden-desktop"><i class="icon-qrcode icon-white"></i> {% trans %}mobile{% endtrans %}</div>
</a>
{%endblock qrLink %}
