{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block title %}Fabbook-Blog{% endblock title %}
{% block classPage %}{% endblock classPage %}
{% block stylePage %}{% endblock stylePage %}
{% block content %}
<div class="jumbotron masthead">
<div class="container">
    <h1>{% trans %}Blog{% endtrans %}</h1>
    <p>{% trans %}about.it{% endtrans %}</p>
  </div>
</div>
<hr>
<div class="container">
    <div class="page-header">
        <h1>{% trans %}news{% endtrans %} <small>{% trans %}last.article{% endtrans %}</small></h1>
    </div>
{% render 'FabfotoGalleryBundle:Default:lastContent' with { noAlbum : true }%}
</div>
<hr>
<div class="container">
    <div class="page-header">
        <h1>{% trans %}article{% endtrans %} <small>{% trans %}about.all{% endtrans %}</small></h1>
    </div>
{% include "FabfotoGalleryBundle:Default:ListArticleBlog.html.twig" %}
<div class="center">
    {{ pagerfanta(ArticlesBlogs, 'twitter_bootstrap_translated') }}
</div>
</div>
{% endblock content %}
{%block qrLink %}
<a id="qrlink" rel="popover" href="{{path('index_blog_mobile') }}" data-content='<img alt="[QR Code]" src="{{ mopa_barcode_url("qr", url("index_blog_mobile") ) }}"/>' data-original-title="{% trans %}mobile{% endtrans %}">
    <div class="visible-desktop"><i class="icon-qrcode icon-black"></i></div>
    <div class="hidden-desktop"><i class="icon-qrcode icon-black"></i> {% trans %}mobile{% endtrans %}</div>
</a>
{%endblock qrLink %}

{% block rss %}{{path('rss_blog')}}{%endblock rss%}
