{% extends 'FabfotoGalleryBundle::layout.html.twig'%}
{% block titlepage %}Fabfoto-Blog{% endblock titlepage %}
{% block content %}
<div class="list_articles_blog">
    {% for article in ArticlesBlogs %}
    <div class="article_blog">
        <h1>{{article.title}}</h1>
        <h2>{{article.subtitle}}</h2>
        <p>{{article.content|raw}}</p>
        <h3 class="author">{{article.author}}</h3>
        <h4>{{article.createdAt|date('d/m/Y')}}</h4>
        <h4>{{article.updatedAt|date('d/m/Y') }}</h4>
        <a href="{{path('show_article_blog', {'id':article.id})}}" >En savoir plus</a>
    </div>
    {% endfor %}
</div>
{% endblock content %}
