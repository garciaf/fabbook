<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block metainfo %}{% endblock metainfo %}
        <title> {% block title %}Fabbook{%endblock title%}</title>
        <link rel="stylesheet" media="all" href="{{ asset('bundles/fabfotogallery/css/style.css')}}" />
        <!-- Le styles -->
        {% stylesheets
        '@FabfotoGalleryBundle/Resources/public/css/style.css'
        '@FBKJsLibBundle/Resources/public/vegas/*.css'
        'bundles/fabfotogallery/bootstrap/css/bootstrap.css'
        '@FabfotoGalleryBundle/Resources/public/bootstrap/css/bootstrap-responsive.css'
 
        %}
         <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
       {% endstylesheets %}
       {%block importcss %}{%endblock importcss %}
       {% javascripts
        '@FBKJsLibBundle/Resources/public/jquery/jquery-1.8.2.min.js'
        '@FabfotoGalleryBundle/Resources/public/vegas/jquery.vegas.js'
        '@FBKJsLibBundle/Resources/public/vegas/*.js'
        '@FabfotoGalleryBundle/Resources/public/bootstrap/js/bootstrap.js'
        '@FabfotoGalleryBundle/Resources/public/js/googleAnalityc.js'
        %}
         <script type="text/javascript" src="{{ asset_url }}"></script>
       {% endjavascripts %}
        <link rel="icon" type="image/png" href="{{ asset('bundles/fabfotogallery/image/icon/iconemain.png')}}">
        {%block importjs %}
        {%endblock importjs%}
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>

        <div id="pageAbout">
            {% for type, flashMessages in app.session.flashbag.all() %}
            <div id="flashes">
                {% for flashMessage in flashMessages %}
                    <div class="flash-{{ type }}">
                        <div class="wrap">
                        {{ flashMessage }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% endfor %}

            {% block content %}lipso lium{%endblock%}

            <div id="footer">
                <p id="legal">
                    <a class="helper" href="{{path('fos_user_registration_register')}}" rel="tooltip" title="{% trans %}register{% endtrans %}"><i class="icon-book"></i></a>
                    <a class="helper" href="{{path('user_show')}}" rel="tooltip" title="{% trans %}connect{% endtrans %}"><i class="icon-user"></i></a>
		</p>
            </div>
        </div>
        <script>
            $('#qrlinkUser').popover({
                placement: 'top',
                trigger: 'hover'
            });
	    $('.helper').tooltip({
                placement: 'top'
            });
        </script>
        {% block carroussel %}
        {% set backgroundImage = asset('bundles/fabfotogallery/image/neutralBackground.png')%}
        {% include 'FabfotoGalleryBundle:Default:Background.html.twig' %}
        {% endblock carroussel %}

    </body>
</html>
