{% extends 'FabfotoGalleryBundle::layoutAdmin.html.twig'%}
{% block content %}
<h1>Picture</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ entity.location }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Preview</th>
            <td><image src="/{{ entity.thumbpath}}" alt="{{entity.webpath}}"/></td>
        </tr>
    </tbody>
</table>

 <div data-role="controlgroup" data-type="horizontal" class="localnav">
        <a href="{{ path('adminPicture') }}" data-role="button">
            Back to the list
        </a>
        <a href="{{ path('adminPicture_new') }}" data-role="button">
             new Picture
        </a>
        <a href="{{ path('adminPicture_edit', { 'id': entity.id }) }}" data-role="button">
            Edit
        </a>
</div>
        <form action="{{ path('adminPicture_delete', { 'id': entity.id }) }}" method="post" >
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
{% endblock content %}