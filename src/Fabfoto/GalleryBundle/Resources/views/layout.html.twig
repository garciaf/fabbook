<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        {% block metainfo %}{% endblock metainfo %}
        <title> {% block title %}Fabbook{%endblock title%}</title>
        <link rel="stylesheet" media="all" href="{{ asset('bundles/fabfotogallery/css/style.css')}}" />
        {%block importcss %}{%endblock importcss %}
        {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        <!-- Le styles -->
        <link href="{{ asset('bundles/fabfotogallery/bootstrap/css/bootstrap.css')}}" rel="stylesheet">
        <link href="{{ asset('bundles/fabfotogallery/bootstrap/css/bootstrap-responsive.css') }}" rel="stylesheet">


        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->



        <link rel="stylesheet" href="{{ asset('bundles/fabfotogallery/vegas/jquery.vegas.css')}}"/>
        <link rel="icon" type="image/png" href="{{ asset('bundles/fabfotogallery/image/icon/iconemain.png')}}">

    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="{{path('show_articles')}}">Fabbook</a>
                    <ul class="nav">
                        <li>
                            <a href="{{path('show_articles')}}">
                                News
                            </a>
                        </li>
                        <li>
                            <a href="{{path('index_album')}}">
                                Albums
                            </a>
                        </li>
                        <li>
                            <a href="{{path('index_blog')}}">
                                Blog
                            </a>
                        </li>                
                        <li>
                            <a href="{{path('contact_new')}}">
                                Contact
                            </a>
                        </li>
                        <li>                                            
                            {%block qrLink %}
                            <a id="qrlink" rel="popover" href="{{path('index_mobile')}}" data-content='<img alt="[QR Code]" src="/{{ mopa_barcode_url("qr", url("index_mobile") ) }}"/>' data-original-title="QR Code">
                                <!--                        <img alt="[QR Code]" src="/{{ mopa_barcode_url('qr', url('index_mobile') ) }}"/>-->
                                Mobile
                            </a>
                            {%endblock qrLink %}
                        </li>
                        <li>
                            <a href="{{path('show_about', {'slug':'fabien-garcia'})}}">
                                About me
                            </a>
                        </li>
                    </ul>
                    <form class="navbar-search pull-right" method="get" action="{{path('fabfoto_search')}}">
                        <input type="text" class="search-query span2" name="q" placeholder="{% trans %}Search {% endtrans %}" value="{% block search_query %}{%endblock search_query%}"/>
                    </form>    
                </div>
            </div>
        </div>
        <div id={% block stylePage%}"page"{% endblock stylePage%}>
             {% if app.session.flashes %}
             <div id="flashes">
                 {% for type, message in app.session.flashes%}
                 <div class="flash {{type}}">
                 <div class="wrap">
                     {{message}}
                 </div>
             </div>
             {% endfor%}
         </div>
         {% endif%}

         {% block content %}lipso lium{%endblock%}     

         <div id="footer">
             <p id="legal"><a href="{{path('fos_user_registration_register')}}">{% trans %}register{% endtrans %}</a></p>

             <a  href="{{path('rss_news')}}"><img id="rss" src="{{ asset('bundles/fabfotogallery/image/icon/rss-icon.png')}}" /></a>
         </div>
        </div>


        <script src="{{ asset('bundles/fabfotogallery/jquery/jquery-1.7.2.js')}}"></script>
        <script src="{{ asset('bundles/fabfotogallery/vegas/jquery.vegas.js')}}"></script>
        <script src="{{ asset('bundles/fabfotogallery/bootstrap/js/bootstrap-tooltip.js')}}"></script>
        <script src="{{ asset('bundles/fabfotogallery/bootstrap/js/bootstrap-popover.js')}}"></script>
        <script src="{{ asset('bundles/fabfotogallery/bootstrap/js/bootstrap-carousel.js')}}"></script>
        <script>
            $('#qrlink').popover({
                placement: 'bottom'
                
            });
            $('.carousel').carousel();
        </script>
        {%block importjs %}
        {%endblock importjs%}
        {% block carroussel %}
        {% set backgroundImage = asset('bundles/fabfotogallery/image/neutralBackground.png')%}
        {% include 'FabfotoGalleryBundle:Default:Background.html.twig' %}
        {% endblock carroussel %}

    </body>
</html>
