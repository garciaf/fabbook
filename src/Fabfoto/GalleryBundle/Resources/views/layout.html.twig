{% import 'FabfotoGalleryBundle:Macro:link.html.twig' as helper %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block metainfo %}{% endblock metainfo %}
        <title>{% block title %}Fabbook{%endblock title%}</title>
        <!-- Le styles -->
        {% stylesheets
        '@FabfotoGalleryBundle/Resources/public/css/style.css'
        '@FOSCommentBundle/Resources/assets/css/comments.css'
       	'@FBKJsLibBundle/Resources/public/vegas/*.css'
        'bundles/fabfotogallery/bootstrap/css/bootstrap.css'
        '@FabfotoGalleryBundle/Resources/public/bootstrap/css/bootstrap-responsive.css'

        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {%block importcss %}{%endblock importcss %}
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% javascripts
        '@FBKJsLibBundle/Resources/public/jquery/jquery-1.8.2.min.js'
        '@FabfotoGalleryBundle/Resources/public/vegas/jquery.vegas.js'
   	'@FBKJsLibBundle/Resources/public/vegas/*.js'
        '@FabfotoGalleryBundle/Resources/public/bootstrap/js/bootstrap.js'
	'@FBKJsLibBundle/Resources/public/jquerymousewheel/*.js'
   	'@FBKJsLibBundle/Resources/public/fancybox/*.js'
   	'@FBKJsLibBundle/Resources/public/fancybox/helpers/*.js'

	'@FabfotoGalleryBundle/Resources/public/js/googleAnalityc.js'
	
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
	<link rel="icon" type="image/png" href="{{ asset('bundles/fabfotogallery/image/icon/iconemain.png')}}">
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar pull-right hidden-desktop" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                  <a class="brand" href="{{path('show_articles')}}">Fabbook</a>
                  <div class="nav-collapse">
                    <ul class="nav" >
                      <li>{{ helper.linkNavBar('icon-home', path('show_articles'), 'home') }}</li>
                      <li>{{ helper.linkNavBar('icon-picture', path('index_album'), 'album') }}</li>
                      <li>{{ helper.linkNavBar('icon-pencil', path('index_blog'), 'blog') }}</li>
                      <li>{{ helper.linkNavBar('icon-envelope', path('contact_new'), 'contact') }}</li>
                      <li>
                      {%block qrLink %}
                      <a id="qrlink" rel="popover" href="{{path('index_mobile')}}" data-content='<img alt="[QR Code]" src="{{ mopa_barcode_url("qr", url("index_mobile") ) }}"/>' data-original-title="{% trans %}mobile{% endtrans %}">
                                    <div class="visible-desktop"><i class="icon-qrcode icon-black"></i></div>
                                    <div class="hidden-desktop"><i class="icon-qrcode icon-black"></i> {% trans %}mobile{% endtrans %}</div>
                                </a>
                                {%endblock qrLink %}
                            </li>
                      <li>{{ helper.linkNavBar('icon-gift', path('gadget_index'), 'gadget') }}</li>
                      <li>{{ helper.linkNavBar('icon-user', path('show_about', {'slug':'fabien-garcia'}), 'about') }}</li>
                        </ul>
                        <form class="navbar-search pull-left form-search" method="get" action="{{path('fabfoto_search')}}">
                            <div class="input-append">
                                <input type="text" class="search-query span2" name="q" placeholder="{% trans %}search{% endtrans %}" value="{% block search_query %}{%endblock search_query%}"/>
                                <button type="submit" class="btn">Go</button>
                            </div>
                        </form>
                        <ul class="nav pull-right">
                            <li class="divider-vertical"></li>
                            <li class="dropdown-open"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-plus"></i></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{path('user_show')}}">{% trans %}connect{% endtrans %}</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{path('fos_user_registration_register')}}">{% trans %}register{% endtrans %}</a></li>

                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% render 'FabfotoGalleryBundle:Default:notification' with {}, {'standalone': true} %}
        {% block content %}lipso lium{%endblock content%}
        {% block footer %}
    <footer class="footer">
	<div class="container">
        <div class="pull-left">
                   <a href="{% block rss %}{{path('rss_news')}}{% endblock rss %}">
	<img alt="rss_image" src="{{ asset('bundles/fabfotogallery/image/icon/rss-black.png') }}"/>
		    </a>
                   <a href="https://twitter.com/#!/FabbookFr">
	<img alt="twitter_link" src="{{ asset('bundles/fabfotogallery/image/icon/twitter-black.png') }}"/>
		    </a>
    </div>
    {% render 'FabfotoGalleryBundle:Default:allTags' %}
         </div>
    </footer>
        {% endblock footer %}
        <script>
            $('#qrlink').popover({
                placement: 'bottom',
		trigger: 'hover'
            });
            $('.qrlink').popover({
                placement: 'top',
		trigger: 'hover'
            });
            $('#qrlinkUser').popover({
                placement: 'top',
		trigger: 'hover'
            });
            $('#qrCode').popover({
                placement: 'top',
		trigger: 'hover'
            });
            $('.userInfo').tooltip({
                placement: 'top'
            });
            $('.helper').tooltip({
                placement: 'bottom'
            });
            $(".collapse").collapse();
            $(".alert").alert();
            $('.carousel').carousel({
                interval: 5000
            });
        </script>
        {%block importjs %}
        {%endblock importjs%}
        {% block carroussel %}
        {% endblock carroussel %}

    </body>
</html>
