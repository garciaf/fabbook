{%for article in articles%}
<item>
    <title>{{article.title}}</title>
    <link>{{url('show_article_blog', {'slugblog':article.slugblog})}}</link>
    <description>{{article.subtitle}}</description>
    <content:encoded><![CDATA[ {{article.content|raw}} ]]></content:encoded>
    <author>{{article.authorUser}}</author>
    <pubDate>{{article.createdAt|date(constant('DATE_RFC822')) }}</pubDate>
</item>
{%endfor%}
